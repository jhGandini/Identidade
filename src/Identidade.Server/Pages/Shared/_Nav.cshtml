@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top border-0 degrade-invertido">
        
        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul class="navbar-nav ms-auto me-5">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@name</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" asp-page="/Account/Logout/Index">Logout</a></li>
                    </ul>
                </li>                
            </ul>
        }
    
    </nav>
